{% trans_default_domain 'FOSUserBundle' %}

<div class="log-container">
    <div class="left-content">
        <div class="instant-logo">
            <div class="sign-up-link">
                <a class="txt2" href="{{ path('fos_user_security_login') }}">
                    <i class="fa fa-long-arrow-left m-l-5" aria-hidden="true"></i>
                    Avez-vous un compte?
                </a>
            </div>
            <img class="instant-logo" src="{{ asset('assets/images/logo.png') }}" alt="IMG">
        </div>
    </div>
    <div class="right-content">
        {{ form_start(form, {'attr': {'class': 'login100-form validate-form', 'id' : 'cmxform'}}) }}
        <span class="login100-form-title">
						Enregistrement
					</span>
        {% form_theme form 'Form/Registration/fields.html.twig' %}

        {{ form_errors(form) }}


        <div class="wrap-input100 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
            {{ form_widget(form.username)}}
            <span class="focus-input100"></span>
            <span class="symbol-input100">
							<i class="fa fa-smile-o" aria-hidden="true"></i>
						</span>
        </div>
        {{ form_errors(form.username)}}
        <div class="wrap-input100 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
            {{ form_widget(form.email)}}
            <span class="focus-input100"></span>
            <span class="symbol-input100">
							<i class="fa fa-envelope" aria-hidden="true"></i>
						</span>
        </div>
        {{ form_errors(form.email)}}
        <div class="wrap-input100 validate-input" data-validate = "Password is required">
            {{ form_widget(form.plainPassword)}}
            <span class="focus-input100"></span>
            <span class="symbol-input100">
							<i class="fa fa-lock" aria-hidden="true"></i>
						</span>
        </div>
        {{ form_errors(form.plainPassword)}}
        <div class="container-login100-form-btn">
            <button class="login100-form-btn" type="submit" name="create" >
                Cr√©er un compte
            </button>
        </div>
        {{ form_end(form) }}
    </div>
</div>


	<script src="{{asset('assets/js/main.js')}}"></script>
