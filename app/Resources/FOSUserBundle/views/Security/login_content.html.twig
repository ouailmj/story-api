{% trans_default_domain 'FOSUserBundle' %}
<div class="log-container">
    <div class="left-content">
        <div class="instant-logo">
            <div class="sign-up-link">
                <a class="txt2" href="{{ path('fos_user_registration_register') }}">
                    <i class="fa fa-long-arrow-left m-l-5" aria-hidden="true"></i>
                    Vous n'avez pas de compte ?
                </a>
            </div>
            <img class="instant-logo" src="{{ asset('assets/images/logo.png') }}" alt="IMG">
        </div>
    </div>
    <div class="right-content">
        <form action="{{ path("fos_user_security_check") }}" method="post" class="login100-form validate-form">
					<span class="login100-form-title">
						Espace de connexion
					</span>
            {% if error %}
                <div class="form-group "><span class="text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</span></div>
            {% endif %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            <div class="wrap-input100 validate-input" data-validate = "email est requis: ex@abc.xyz">
                <input id="username" name="_username" value="{{ last_username }}" class="input100" type="text" placeholder="Pseudo">
                <span class="focus-input100"></span>
                <span class="symbol-input100">
							<i class="fa fa-smile-o" aria-hidden="true"></i>
						</span>
            </div>

            <div class="wrap-input100 validate-input" data-validate = "mot de passe est requis">
                <input type="password" id="password" name="_password" class="input100" name="pass" placeholder="Mot de passe">
                <span class="focus-input100"></span>
                <span class="symbol-input100">
							<i class="fa fa-lock" aria-hidden="true"></i>
						</span>
            </div>

            <label class="remember-me">
                <input type="checkbox"> Toujours connecté ?
            </label>

            <div class="container-login100-form-btn">
                <button type="submit" id="_submit" name="_submit" class="login100-form-btn">
                    Connexion
                </button>
            </div>

            <div class="text-center p-t-12">
                <a class="txt2" href="{{ path('fos_user_resetting_request') }}">
                    Mot de passe oublié ?
                </a>
            </div>

            <ul class="list-inline form-group list-inline-condensed text-center">

                {#{% for owner in hwi_oauth_resource_owners() %}#}
                    <li><a href="{{ hwi_oauth_login_url(hwi_oauth_resource_owners()[0]) }}" class="btn bg-{{ hwi_oauth_resource_owners()[0] }} text-white btn-flat btn-icon btn-rounded"><i class="icon-{{ hwi_oauth_resource_owners()[0] }}"></i></a></li>
                {#{% endfor %}#}
            </ul>
        </form>
    </div>
</div>
