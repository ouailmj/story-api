{% extends "client/profile/base_profile.html.twig" %}

{% block title %}AppBundle:Default:index{% endblock %}

{% block container %}
<div class="main-panel">
      <!-- Navbar -->
      <nav class="navbar navbar-expand-lg navbar-transparent  navbar-absolute bg-primary fixed-top">

      </nav>
      <!-- End Navbar -->
      <div class="panel-header panel-header-lg">
        <canvas id="bigDashboardChart"></canvas>
      </div>
        <div class="content">
            <div class="col-md-10 mr-auto ml-auto">
                <!--      Wizard container        -->
                <div class="wizard-container">
                    <div class="card card-wizard active" data-color="primary" id="wizardProfile">
                        <div class="card-header text-center" data-background-color="orange">
                            <h5 class="card-title">
                                    PROFILE
                            </h5>
                            <div class="wizard-navigation">
                                <ul class="nav nav-pills">
                                    <li class="nav-item" style="width: 50%;">
                                        <a class="nav-link" href="{{ path('client_profile_edit') }}">
                                            <i class="now-ui-icons fa fa-user"></i>
                                            Modifier Mon profile
                                        </a>
                                    </li>
                                    <li class="nav-item active" style="width: 50%;">
                                        <a class="nav-link" href="{{ path('client_profile_password') }}">
                                            <i class="now-ui-icons fa fa-key"></i>
                                            Change de mot de passe
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-body">
                            {{ form_start(form) }}
                                <div class="row">
                                    <div class="col-md-12 pr-1">
                                        <div class="form-group">
                                            <label>Mot de passe Actuel</label>
                                            {{ form_widget(form.current_password) }}
                                            {{ form_errors(form.current_password) }}
                                        </div>
                                    </div>
                                    <div class="col-md-12 pr-1">
                                        <div class="form-group">
                                            <label>Nouveau mot de passe</label>
                                            {{ form_widget(form.plainPassword['first']) }}
                                            {{ form_errors(form.plainPassword['first']) }}
                                        </div>
                                    </div>
                                    <div class="col-md-12 pr-1">
                                        <div class="form-group">
                                            <label>Répéter le nouveau mot de passe</label>
                                            {{ form_widget(form.plainPassword['second']) }}
                                            {{ form_errors(form.plainPassword['second']) }}

                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 pre-1">
                                        <button type="submit" class="btn btn-success">Enregistrer</button>
                                    </div>
                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>
{% endblock %}
