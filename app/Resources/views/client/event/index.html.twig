{% extends "client/event/base_list_event.html.twig" %}
{% block title %}AppBundle:Default:index{% endblock %}

{% block container %}
<div class="main-panel">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-transparent  navbar-absolute bg-primary fixed-top">

    </nav>
    <!-- End Navbar -->
    <div class="events">
        <div class="col-md-10 mr-auto ml-auto">
            <!--      Wizard container        -->
            <div class="upcoming">
                <div class="alert alert-info" role="alert">Upcoming Events</div>
                <div class="row">
                {% for event in upcomingEvents %}
                    <div class="col-md-3">
                        <div class="column">
                                <!-- Post-->
                                <div class="post-module">
                                <!-- Thumbnail-->
                                    <div class="thumbnail">
                                        <div class="date">
                                        <div class="day">{{ event.startsAt|date('d') }}</div>
                                        <div class="month">{{ event.startsAt|date('M') }}</div>
                                        </div><img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/169963/photo-1429043794791-eb8f26f44081.jpeg"/>
                                </div>
                                <!-- Post Content-->
                                <div class="post-content">
                                    <div class="category">
                                        {% if isPaidEvent[event.id] %}
                                            PAID
                                            {% else %}
                                            UNPAID
                                        {% endif %}
                                    </div>
                                    <h1 class="title">{{ event.title }}</h1>
                                    <h2 class="sub_title">{{ event.place }}</h2>
                                    <p class="description"><p>{{ event.description }}</p></p>
                                    <div class="post-meta"><span class="comments"><i class="fa fa-sliders"></i><a href="#">Settings</a></span></div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                </div>
            </div>
            
            <div class="passed">
                <div class="alert alert-warning" role="alert">Passed Events</div>
                <div class="row">
                {% for event in passedEvents %}
                    <div class="col-md-3">
                        <div class="column">
                                <!-- Post-->
                                <div class="post-module">
                                <!-- Thumbnail-->
                                    <div class="thumbnail">
                                        <div class="date">
                                        <div class="day">{{ event.startsAt|date('d') }}</div>
                                        <div class="month">{{ event.startsAt|date('M') }}</div>
                                        </div><img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/169963/photo-1429043794791-eb8f26f44081.jpeg"/>
                                </div>
                                <!-- Post Content-->
                                <div class="post-content">
                                    <div class="category">
                                        {% if isPaidEvent[event.id] %}
                                            PAID
                                            {% else %}
                                            UNPAID
                                        {% endif %}
                                    </div>
                                    <h1 class="title">{{ event.title }}</h1>
                                    <h2 class="sub_title">{{ event.place }}</h2>
                                    <p class="description"><p>{{ event.description }}</p></p>
                                    <div class="post-meta"><span class="timestamp"><i class="fa fa-clock-"></i></span><span class="comments"><i class=""></i><a href="#"></a></span></div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>

    <script>
    (function() {

        $(window).load(function() {
            $('.post-module').hover(function() {
                $(this).find('.description').stop().animate({
                height: "toggle",
                opacity: "toggle"
                }, 300);
            });
        });
        var button, buttonStyles, materialIcons;

        materialIcons = '<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">';

        buttonStyles = '<link href="https://codepen.io/andytran/pen/vLmRVp.css" rel="stylesheet">';

        button = '<a href="{{ path('add_event_index') }}" class="at-button"><i class="material-icons">clear</i></a>';

        document.body.innerHTML += materialIcons + buttonStyles + button;

        }).call(this);

        //# sourceMappingURL=data:application/json;base64,
        //# sourceURL=coffeescript
    </script>
{% endblock %}
