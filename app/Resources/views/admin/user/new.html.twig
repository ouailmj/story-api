{% extends 'admin/base.html.twig' %}

{% block content %}
    <div class="panel panel-flat">
        <div class="panel-heading">
            <h6 class="panel-title">{{ 'user.index.create_title'|trans }}<a class="heading-elements-toggle"><i class="icon-more"></i></a></h6>
            <div class="heading-elements">
                <a href="{{ path('user_index') }}" class="btn btn-primary btn-xs "><b><i class="icon-loop3"></i></b> {{ 'user.index.back-list'|trans }}</a>
            </div>
        </div>
        <div class="panel-body">
            <p class="content-group-lg"></p>

            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_widget(form) }}
            <div class="text-right">
                <button type="submit" class="btn btn-primary legitRipple">{{ 'user.submit'|trans }} <i class="icon-arrow-right14 position-right"></i></button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
